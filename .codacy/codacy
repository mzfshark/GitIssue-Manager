#!/usr/bin/env bash
set -euo pipefail

HERE=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
BIN_DIR="$HERE/bin"

if [[ -x "$BIN_DIR/codacy-analysis-cli" ]]; then
  exec "$BIN_DIR/codacy-analysis-cli" "$@"
elif [[ -x "$BIN_DIR/codacy-analysis-cli.exe" ]]; then
  exec "$BIN_DIR/codacy-analysis-cli.exe" "$@"
else
  echo "Codacy CLI not found. Please run: npm run codacy:install" >&2
  exit 1
fi
