{
  "name": "gitissue-manager",
  "version": "1.0.0",
  "description": "Automate GitHub issue creation from Markdown checklists with optional Project V2 sync",
  "main": "server/executor.js",
  "type": "commonjs",
  "scripts": {
    "link:global": "npm link --ignore-scripts",
    "unlink:global": "npm unlink -g gitissue-manager || true",
    "setup": "bash sync-helper/setup-sync.sh",
    "repos": "node scripts/list-repos.js"
  },
  "keywords": [
    "github",
    "issues",
    "automation",
    "markdown",
    "project-management",
    "github-api",
    "cli"
  ],
  "author": "mzfshark",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mzfshark/GitIssue-Manager"
  },
  "bin": {
    "gitissue-prepare": "./client/prepare.js",
    "gitissue-execute": "./server/executor.js",
    "gitissuer": "./bin/gitissuer"
  }
}
